{
  "$schema":     "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "name":        "devbox-powershell",
  "description": "A development environment for powershell and cloud automation",
  "packages": [
    "jq",
    "powershell@latest"
  ],
  "env": {
    "PS1": "üêù "
  },
  "shell": {
    "init_hook": [
      "cat 'devbox.json' | jq '.description' ",
      "source .env"
    ],
    "scripts": {
      "env-list" : ["devbox shellenv"],
      "g-push":          ["git add . && git commit -m 'üêù' && git push"],
      "powershell-host": ["pwsh --version && pwsh -c 'Get-Host' "],
      "powershell-test": ["pwsh -file './powershell/test.ps1' -ExecutionPolicy Bypass "]
    }
  }
}
